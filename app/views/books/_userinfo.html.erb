      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image,:fill,60,60,format:'jpeg',fallback: "no_image.jpeg" %>

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
          <th>name</th>
          <th><%= user.name %></th>
          </tr>
          <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tbody>
      </table>

      <div class="row">
        <%= link_to "",edit_user_path(current_user.id),class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model:book,url:'/books',local:true do |f|%>
      <div class="form-group">
        <label for="book_title">Title</label><br>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label><br>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>