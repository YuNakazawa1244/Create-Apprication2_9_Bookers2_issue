<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">


<%= render 'books/userinfo', user: @user,book: @book %>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
          </tr>
        </thead>


        <tbody>
            <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @book.user, :profile_image,size:'60x60',format:'jpeg',fallback: "no_image.jpeg" %></td>
            <td><%=link_to book.title,book_path(book) %></td>
            <td><%= book.body %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>


      </table>
    </div>
  </div>
</div>






