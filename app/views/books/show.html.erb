<div class="container px-5 px-sm-0">
<div class="row">

<div class="col-md-3">
<%= render 'books/userinfo', user: @user,book: @new_book %>
</div>


  <div class = "col-md-8 offset-md-1" >
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to attachment_image_tag(@user, :profile_image, :fill,60,60, fallback: "no_image.jpg"), user_path(@user.id) %>
            <br />
            <%= link_to @user.name,user_path(@user.id) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
<!--以下いいね機能-->
          <% if @book.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(@book.id),method: :delete do %>
                ♥<%= @book.favorites.count %>いいね
              <% end %>
            </td>
          <% else %>
            <td>
              <%= link_to book_favorites_path(@book.id),method: :post do %>
                ♡<%= @book.favorites.count %>いいね
              <% end %>
            </td>
          <% end %>
<!--以上いいね機能-->
<!--以下コメント数の機能-->
          <td>
          <%= link_to "#{@book.post_comments.count}コメント",book_path(@book.id) %>
          </td>
<!--以上コメント数の機能-->
          <% if @user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id),class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id),method: :delete, data: { confirm: "Are you sure ?"}, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
<!--以下コメント機能-->
<% @book.post_comments.each do |post_comment| %>
<div class="table">
  <tbody align="center">
    <tr>
      <td>
        <%= link_to attachment_image_tag(@user, :profile_image, :fill,60,60, fallback: "no_image.jpg"), user_path(@user.id) %>
        </br>
        <%= link_to @user.name,user_path(@user.id) %>
      </td>
      <td>
        <%= post_comment.comment %>
      </td>
      <td>
        <% if post_comment.user == current_user %>
        <div class="comment-delete">
          <%= link_to "Destroy",book_post_comment_path(post_comment.book,post_comment), method: :delete, data: { confirm: "Are you sure ?"},class: "btn btn-sm btn-danger" %>
        </div>
        <% end %>
      </td>
    </tr>
  </tbody>
</div>
<% end %>

    <p class="text-danger">
      <% if @comment.present? %>
        <% @comment.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
    </p>

    <div class="new-comments">
      <%= form_with(model:[@book,@post_comment],local:true) do |f| %>
        <%= f.text_area :comment,rows:'5',placeholder:"コメント" %>
        <p><%= f.submit "送信する" %></p>
      <% end %>
    </div>
<!--以上コメント機能-->
  </div>
</div>
</div>