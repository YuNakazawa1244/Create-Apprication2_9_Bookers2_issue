<% @book.post_comments.each do |post_comment| %>
<div class="table">
  <tbody align="center">
    <tr>
      <td>
        <%= link_to attachment_image_tag(@user, :profile_image, :fill,60,60, fallback: "no_image.jpg"), user_path(@user.id) %>
        </br>
        <%= link_to @user.name,user_path(@user.id) %>
      </td>
      <td>
        <%= post_comment.comment %>
      </td>
      <td>
        <% if post_comment.user == current_user %>
        <div class="comment-delete">
          <%= link_to "Destroy",book_post_comment_path(post_comment.book,post_comment), method: :delete, remote:true, data: { confirm: "Are you sure ?"},class: "btn btn-sm btn-danger" %>
        </div>
        <% end %>
      </td>
    </tr>
  </tbody>
</div>
<% end %>